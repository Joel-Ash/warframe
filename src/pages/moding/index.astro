const groups = Array.from(grouped.entries()).sort(([a], [b]) => {
  const ia = PART_ORDER.indexOf(a);
  const ib = PART_ORDER.indexOf(b);
  return (ia === -1 ? 999 : ia) - (ib === -1 ? 999 : ib);
});
