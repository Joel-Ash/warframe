const PART_ORDER = ['warframes', 'weapons', 'companions'];

// âœ… ê·¸ë£¹ ìƒì„±
const grouped = new Map<string, typeof posts>();
for (const post of posts) {
  const part = getPartFromId(post.id);
  if (!grouped.has(part)) grouped.set(part, []);
  grouped.get(part)!.push(post);
}

