---
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import Header from '../../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../../consts';

const posts = (await getCollection('moding')).sort(
  (a, b) => a.data.title.localeCompare(b.data.title, 'ko')
);

function getPartFromId(id: string) {
  const normalized = id.replaceAll('\\', '/');
  return normalized.split('/')[0] || 'etc';
}

const PART_LABELS: Record<string, string> = {
  'warframes': '워프레임',
  'weapons': '무기',
  'companions': '동반자',
};

const PART_ORDER = ['warframes', 'weapons', 'companions'];

const grouped = new Map<string, typeof posts>();
for (const post of posts) {
  const part = getPartFromId(post.id);
  if (!grouped.has(part)) grouped.set(part, []);
  grouped.get(part)!.push(post);
}

const groups = Array.from(grouped.entries()).sort(([a], [b]) => {
  const ia = PART_ORDER.indexOf(a);
  const ib = PART_ORDER.indexOf(b);
  return (ia === -1 ? 999 : ia) - (ib === -1 ? 999 : ib);
});
---

<!doctype html>
<html lang="ko">
  <head>
    <BaseHead title={`${SITE_TITLE} - Moding`} description={SITE_DESCRIPTION} />
    <style>
      main {
        width: 960px;
        margin: 0 auto;
      }

      .moding-notice {
        margin: 3.5rem auto 4.5rem;
        max-width: 820px;
        text-align: center;
      }

      .moding-notice p {
        margin: 0.6rem 0;
        font-size: 1.25rem;
        font-weight: 700;
        line-height: 1.65;
        color: rgba(180, 200, 255, 0.85);
      }

      .category {
        margin: 1.2rem 0 1.6rem;
        padding: 0;
      }

      details {
        border: 1px solid rgba(255, 255, 255, 0.08);
        border-radius: 12px;
        overflow: hidden;
        background: rgba(0, 0, 0, 0.15);
      }

      summary {
        cursor: pointer;
        list-style: none;
        padding: 0.9rem 1rem;
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 1rem;
        user-select: none;
        font-weight: 700;
        letter-spacing: 0.2px;
      }

      summary::-webkit-details-marker {
        display: none;
      }

      .category-title {
        display: flex;
        align-items: center;
        gap: 0.6rem;
      }

      .count {
        opacity: 0.7;
        font-size: 0.9rem;
        font-weight: 600;
      }

      .chev {
        width: 10px;
        height: 10px;
        border-right: 2px solid rgba(255, 255, 255, 0.7);
        border-bottom: 2px solid rgba(255, 255, 255, 0.7);
        transform: rotate(-45deg);
        transition: transform 0.18s ease;
      }

      details[open] .chev {
        transform: rotate(45deg);
      }

      .accordion-body {
        border-top: 1px solid rgba(255, 255, 255, 0.06);
      }

      .accordion-inner {
        min-height: 0;
      }

      ul {
        display: flex;
        flex-wrap: wrap;
        gap: 1.2rem;
        list-style-type: none;
        margin: 0;
        padding: 1rem;
      }

      ul li {
        width: calc(50% - 0.6rem);
      }

      ul li * {
        text-decoration: none;
        transition: 0.2s ease;
      }

      ul li img {
        margin-bottom: 0.5rem;
        border-radius: 12px;
      }

      ul li a {
        display: block;
        padding: 0.2rem 0.2rem 0.4rem;
        border-radius: 10px;
      }

      .title {
        margin: 0;
        color: rgba(255, 255, 255, 0.92);
        line-height: 1.2;
        font-weight: 700;
      }

      .date {
        margin: 0.35rem 0 0;
        color: rgba(255, 255, 255, 0.55);
        font-size: 0.92rem;
      }

      ul li a:hover .title,
      ul li a:hover .date {
        color: rgb(var(--accent));
      }

      ul li a:hover img {
        box-shadow: var(--box-shadow);
      }

      @media (max-width: 720px) {
        main {
          width: 100%;
          padding: 0 1rem;
        }
        .moding-notice p {
          font-size: 0.95rem;
        }
        ul {
          gap: 0.7rem;
        }
        ul li {
          width: 100%;
        }
      }
    </style>
  </head>

  <body>
    <Header />

    <main>
      <section class="moding-notice">
        <p>모딩에는 정답이 없습니다.</p>
        <p>
          본 가이드는 작성자의 기준과 플레이 경험을 바탕으로<br />
          인터넷에 공유된 다양한 모딩 자료를 참고하여 정리한 문서입니다.
        </p>
        <p>
          실제 모딩은 개인의 플레이 스타일, 콘텐츠, 취향에 따라 달라질 수 있으며<br />
          그대로 모딩을 해도 무방하나 내용을 이해한 뒤 본인에게 맞게 변형해서 사용하는 것을 권장합니다.
        </p>
      </section>

      {groups.map(([partKey, list]) => {
        const label = PART_LABELS[partKey] ?? partKey;

        return (
          <section class="category">
            <details data-part={partKey}>
              <summary>
                <span class="category-title">
                  <span class="chev" aria-hidden="true"></span>
                  <span>{label}</span>
                </span>
                <span class="count">{list.length}개</span>
              </summary>

              <div class="accordion-body">
                <div class="accordion-inner">
                  <ul>
                    {list.map((post) => (
                      <li>
                        <a href={`/moding/${post.id}/`}>
                          {post.data.heroImage && (
                            <Image width={720} height={360} src={post.data.heroImage} alt="" />
                          )}
                          <h4 class="title">{post.data.title}</h4>
                          <p class="date">
                            <FormattedDate date={post.data.pubDate} />
                          </p>
                        </a>
                      </li>
                    ))}
                  </ul>
                </div>
              </div>
            </details>
          </section>
        );
      })}
    </main>

    <Footer />
  </body>
</html>
